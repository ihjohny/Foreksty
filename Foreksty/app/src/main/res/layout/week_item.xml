<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        app:cardElevation="0dp"
        android:id="@+id/week_item_id">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wi_layout_id">

        <TextView
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:text="@string/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_day_id"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/wi_date_id"/>

        <TextView
                android:text="@string/date"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_date_id"
                app:layout_constraintTop_toBottomOf="@+id/wi_day_id"
                app:layout_constraintStart_toStartOf="@+id/wi_day_id"/>

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rain"
                android:id="@+id/wi_stateIcon_id"
                android:contentDescription="@string/tempIcon_description"
                app:layout_constraintBottom_toTopOf="@+id/wi_maxValue_id"
                app:layout_constraintTop_toTopOf="@+id/wi_temp_id"
                app:layout_constraintEnd_toStartOf="@+id/wi_temp_id"
                android:layout_marginEnd="4dp"/>

        <TextView
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:text="@string/dayTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_temp_id"
                app:layout_constraintBaseline_toBaselineOf="@+id/wi_day_id"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:text="@string/max"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_max_id"
                app:layout_constraintBaseline_toBaselineOf="@+id/wi_maxValue_id"
                app:layout_constraintEnd_toStartOf="@+id/wi_maxValue_id"/>

        <TextView
                android:text="@string/min"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_min_id"
                app:layout_constraintBaseline_toBaselineOf="@+id/wi_minValue_id"
                app:layout_constraintEnd_toStartOf="@+id/wi_minValue_id"/>

        <TextView
                android:text="@string/minValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_minValue_id"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                app:layout_constraintTop_toBottomOf="@+id/wi_temp_id"
                app:layout_constraintEnd_toStartOf="@+id/wi_max_id"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"/>

        <TextView
                android:text="@string/maxValue"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_maxValue_id"
                app:layout_constraintTop_toBottomOf="@+id/wi_temp_id"
                app:layout_constraintEnd_toEndOf="@+id/wi_temp_id"
                android:layout_marginTop="4dp"/>

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wind"
                android:id="@+id/wi_windIcon_id"
                app:layout_constraintStart_toStartOf="@+id/wi_day_id"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wi_date_id"
                android:contentDescription="@string/windIcon_description"/>

        <TextView
                android:text="@string/windValue"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_windValue_id"
                app:layout_constraintTop_toTopOf="@+id/wi_windIcon_id"
                app:layout_constraintBottom_toBottomOf="@+id/wi_windIcon_id"
                app:layout_constraintStart_toEndOf="@+id/wi_windIcon_id"
                android:layout_marginStart="4dp"/>

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/precipation"
                android:id="@+id/wi_precIcon_id"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/wi_windValue_id"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/wi_date_id"
                android:contentDescription="@string/preIcon_description"/>

        <TextView
                android:text="@string/precValue"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_precValue_id"
                app:layout_constraintStart_toEndOf="@+id/wi_precIcon_id"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@+id/wi_precIcon_id"
                app:layout_constraintBottom_toBottomOf="@+id/wi_precIcon_id"/>

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/humidity"
                android:id="@+id/wi_humIcon_id"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/wi_precValue_id"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/wi_date_id"
                android:contentDescription="@string/humIcon_description"/>

        <TextView
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:text="@string/humValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wi_humValue_id"
                app:layout_constraintStart_toEndOf="@+id/wi_humIcon_id"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/wi_humIcon_id"
                app:layout_constraintTop_toTopOf="@+id/wi_humIcon_id"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>